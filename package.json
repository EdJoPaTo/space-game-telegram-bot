{
	"name": "karvis-space-game-telegram-bot",
	"private": true,
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"build": "del-cli dist && tsc",
		"start": "ts-node source/index.ts",
		"test": "tsc --sourceMap && xo && nyc ava"
	},
	"type": "commonjs",
	"engines": {
		"node": ">=14"
	},
	"dependencies": {
		"@edjopato/datastore": "^0.3.4",
		"@edjopato/telegraf-i18n": "^0.2.0",
		"node-schedule": "^1.3.2",
		"source-map-support": "^0.5.19",
		"telegraf": "^4.0.1",
		"telegraf-inline-menu": "^6.0.0",
		"telegraf-middleware-console-time": "^2.0.0",
		"telegraf-session-local": "^2.0.0",
		"telegram-format": "^2.0.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^1.0.1",
		"@types/node": "^15.0.1",
		"@types/node-schedule": "^1.3.1",
		"ava": "^3.0.0",
		"del-cli": "^4.0.0",
		"nyc": "^15.0.0",
		"ts-node": "^10.0.0",
		"typescript": "^4.2.3",
		"xo": "^0.42.0"
	},
	"nyc": {
		"all": true,
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"rules": {
			"@typescript-eslint/no-non-null-assertion": "off",
			"unicorn/prefer-node-protocol": "off",
			"ava/no-ignored-test-files": "off"
		}
	}
}
