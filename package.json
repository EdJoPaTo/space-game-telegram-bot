{
	"name": "karvis-space-game-telegram-bot",
	"private": true,
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"build": "del-cli dist && tsc",
		"start": "tsc --sourceMap && node --unhandled-rejections=strict -r source-map-support/register dist/source/index.js",
		"test": "tsc --sourceMap && xo && nyc ava"
	},
	"engines": {
		"node": ">=14"
	},
	"dependencies": {
		"@edjopato/datastore": "^0.3.4",
		"@edjopato/telegraf-i18n": "^0.2.0",
		"node-schedule": "^1.3.2",
		"source-map-support": "^0.5.19",
		"telegraf": "^4.0.1",
		"telegraf-inline-menu": "^6.0.0",
		"telegraf-middleware-console-time": "^2.0.0",
		"telegraf-session-local": "^2.0.0",
		"telegram-format": "^2.0.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/node": "^14.14.22",
		"@types/node-schedule": "^1.3.1",
		"ava": "^3.0.0",
		"del-cli": "^3.0.0",
		"nyc": "^15.0.0",
		"typescript": "^4.1.2",
		"xo": "^0.38.2"
	},
	"nyc": {
		"all": true,
		"extension": [
			".ts"
		],
		"include": [
			"dist/source",
			"source"
		],
		"exclude": [
			"**/*.d.ts",
			"**/*.test.ts"
		],
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"rules": {
			"ava/no-ignored-test-files": "off"
		}
	}
}
